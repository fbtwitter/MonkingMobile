<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrain_form_loan_layerInherit"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_form_loan_stepperTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="LOAN"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/view_form_loan_defider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constrain_form_loan_layerInherit" />

    <View
        android:id="@+id/view_form_loan_defider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_form_loan_stepperTitle" />

    <EditText
        android:id="@+id/tv_form_loan_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/txt_form"
        android:ems="10"
        android:hint="Adjust Date"
        android:inputType="numberDecimal"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_form_loan_defider" />

    <EditText
        android:id="@+id/tv_form_loan_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/txt_form"
        android:ems="10"
        android:hint="To"
        android:inputType="numberDecimal"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_form_loan_date" />

    <EditText
        android:id="@+id/tv_form_loan_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/txt_form"
        android:ems="10"
        android:hint="Select Account"
        android:inputType="numberDecimal"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_form_loan_to" />


    <EditText
        android:id="@+id/tv_form_loan_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/txt_form"
        android:ems="10"
        android:hint="Insert Amount"
        android:inputType="textLongMessage"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_form_loan_account" />


    <EditText
        android:id="@+id/tv_form_loan_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/txt_form"
        android:ems="10"
        android:hint="Due Date"
        android:inputType="textLongMessage"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_form_loan_amount" />

    <EditText
        android:id="@+id/tv_form_loan_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/txt_form"
        android:ems="10"
        android:hint="Description"
        android:inputType="textLongMessage"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_form_loan_due_date" />

    <Button
        android:id="@+id/btn_form_loan_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/all_bg_box_blue"
        android:text="SAVE"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_form_loan_description"
        app:layout_constraintStart_toStartOf="@+id/tv_form_loan_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_form_loan_description" />
</androidx.constraintlayout.widget.ConstraintLayout>